#!/bin/bash
#
#
cd $HOME
if [ -r Luggage ] && [ ! -d Luggage ]
then
    rm Luggage
fi
if [ ! -L Luggage ] && [ ! -d Luggage ]
then 
    ln -s /mnt/hgfs/Luggage .
fi
if [ ! -d .ssh ]
then
    mkdir .ssh
fi
if [ ! -r .ssh/id_rsa ]
then
    cp Luggage/RSA\ Keys/id_rsa .ssh
    chmod 600 .ssh/id_rsa
fi
if [ ! -r .ssh/id_rsa.pub ]
then
    cp Luggage/RSA\ Keys/id_rsa.pub .ssh
    chmod 600 .ssh/id_rsa.pub
fi
if [ ! -r .ssh/authorized_keys ]
then
    cp .ssh/id_rsa.pub .ssh/authorized_keys
    chmod 600 .ssh/authorized_keys
fi

if [ ! -L .profile ]
then
    rm .profile
    ln -s $HOME/git/scripts/.profile .
fi
if [ ! -L .bashrc ]
then
    rm .bashrc
    ln -s $HOME/git/scripts/.bashrc .
fi
if [ -r .gitconfig ]
then
    rm .gitconfig
    ln -s $HOME/git/scripts/.gitconfig .
fi
if [ ! -L .git_message.txt ]
then
    rm .git_message.txt
    ln -s $HOME/got/scripts/.git_message.txt .
fi

if [ ! -r .emacs.d/init.el ]
then
    ln -s $HOME/git/scripts/init.el .emacs.d/init.el
fi

if [ ! -d .emacs.d/vendor ]
then
    mkdir .emacs.d/vendor
fi
